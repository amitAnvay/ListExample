<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andridlearning.amit_gupta.listexample" >
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CardView" >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ArrayAdapterListTestActivity"
            android:label="@string/title_activity_array_adapter_list_test" >
        </activity>
        <activity
            android:name=".baseAdapterExample.BaseAdapterListActivity"
            android:label="@string/title_activity_base_adapter_list" >
        </activity>
        <activity
            android:name=".ListActivityExample.ListActivityExample"
            android:label="@string/title_activity_list_activity_example" >
        </activity>
        <activity
            android:name=".RecyclerViewExample.FeedListActivity"
            android:label="@string/recycler_view_example" >
        </activity>
    </application>

</manifest>
